{
  "compilerOptions": {
    "target": "es2019",
    "jsx": "preserve",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist/src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [ "./node_modules/@types" ],
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "client",
    "dist",
    "node_modules"
  ]
}
